<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/veryPurple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/mediumPurple</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/veryPurple</item>
        <item name="android:headerBackground">@color/lessPurple</item>
        <item name="android:textColorPrimary">@color/mediumPurple</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/veryPurple</item>
        <item name="android:headerBackground">@color/lessPurple</item>
        <item name="android:textColorPrimary">@color/mediumPurple</item>
    </style>

    <style name="DayCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/veryPurple</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>